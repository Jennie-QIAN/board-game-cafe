<div class="banner--play">
    <div>
        {{#if play.dateTime}}
        <h3>{{localdate play.dateTime}}</h3>
        {{else}}
        <h3>{{localdate play.dateTime}}</h3>
        {{/if}}
        <h3>{{play.location.city}}</h3>
    </div>
    <div class="play-organizer-btns">
        <div class="play-organizer">
            <img src="{{play.organizer.avatar}}" class="avatar">
            <p>Initiated by: {{play.organizer.username}}</p>
        </div>
        {{#if isOrganizer}}
        <div class="play__edit-delete">
            <a href="/plays/{{play.id}}/edit" class="btn-submit">edit</a>
            <form action="/plays/{{play.id}}/delete" method="POST">
                <button class="btn-submit" type="submit">delete</button>
            </form>
        </div>
        {{else}}
        <button class="join-play{{#if ifJoined}} joined{{/if}}" data-play-id="{{play.id}}">
            <svg version="1.1" class="svg-join" x="0px" y="0px" viewBox="0 0 300.003 300.003" style="enable-background:new 0 0 300.003 300.003;"
        xml:space="preserve"><path d="M150,0C67.159,0,0.001,67.159,0.001,150c0,82.838,67.157,150.003,149.997,150.003S300.002,232.838,300.002,150
