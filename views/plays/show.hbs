<section class="container--play">
    <div>
        <h3>Venue</h3>
        <p>
            {{play.location.nameOfCommerce}}
        </p>
        <p>
            {{play.location.street}}<br>{{play.location.city}}, {{play.location.postCode}}, {{play.location.country}}
        </p>
    </div>

    <div class="play-games">
        <h3>Games to play</h3>
        {{> bisGPartial games=play.gamesForPlay}}
    </div>

    <section>
        <h3>Players</h3>
        <p>min: {{play.minPlayer}} / max: {{play.maxPlayer}}</p>
        <div class="list--participants">
        {{#if play.players}}        
            <h4>These players have joined this game play</h4>
            <div class="participants__users">
                {{#each play.players}}
                    <div class="card--player" data-player-id="{{this._id}}">
                        <img src="{{this.avatar}}" class="avatar">
                        <a href="/users/{{this._id}}"><h4>{{this.username}}</h4></a>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p>Ooo there is no other player yet. Join {{play.organizer.username}} now!</p>
        {{/if}}
        </div>       
    </section>

</section>