<div class="slider-plays horizontal-scroll">
    {{#each plays}}
    <div class="card-play card">
        <div class="img-games carousel">
            {{#each this.gamesForPlay}}
            <input type="checkbox" class="faux-ui-facia">
            <div class="slide">
                <img src="{{this.smImg}}" alt="{{this.name}}">
            </div>
            {{/each}}
        </div>
        <div class="info-play">
            <a href="/plays/{{this._id}}">
            <p>{{localdate this.dateTime}}</p>
            <div id="names-games">
                {{#each this.gamesForPlay}}
                <a href="/games/{{this._id}}">{{this.name}}</a>
                {{/each}}
            </div>
            <div class="players">
                <div class="avatars">
                    {{#each this.players}}
                    <img src="{{this.avatar}}" alt="{{this.username}}" class="avatar">
                    {{/each}}
                </div>
                <div>
                    <p>{{this.players.length}} / {{this.maxPlayer}}</p>
                </div>
            </div>
            </a>
        </div>
    </div>
    {{/each}}
</div>